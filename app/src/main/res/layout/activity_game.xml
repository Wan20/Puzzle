<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.wansu.puzzle.GameActivity">

    <LinearLayout
        android:id="@+id/GameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button00"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorAccent"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Button01"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Button02"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button03"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Button04"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Button05"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button06"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Button07"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="48sp" />

            <Button
                android:id="@+id/Button08"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="48sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/MoveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameField"
        android:text="@string/moves_title"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/FeedbackTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MoveText"
        android:text="@string/feedback_title"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/MoveCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MoveText"
        android:layout_below="@+id/GameField"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/MoveText"
        android:text="0"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/FeedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/GameField"
        android:layout_below="@+id/FeedbackTitleText"
        android:text="@string/game_feedback_text"
        android:textSize="28sp" />
</RelativeLayout>
